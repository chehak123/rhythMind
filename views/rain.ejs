<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>Rain</title>

    <link rel="stylesheet" type="text/css" href="rain.css">

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=DotGothic16&display=swap" rel="stylesheet">

    <!-- Favicon -->
    <link rel="shortcut icon" href="images/favicon.png">

    <style type="text/css">
            .rain-container {
        padding: 0;
        background:linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(images/rain_bg.jpg);
        background-repeat: no-repeat;
        background-size: 100%;

        margin: 2% 5% auto 5%;
        background-size: 100% 100%;
      }
 
      .rain {
        height: 100vh;
        background: url(images/rain.png);
        animation: rain 0.4s linear infinite;
      }

      .rain-container:before {
        content: '';
        position: absolute;
        width: 89%;
        height: 100%;
        background: #ffffff8a;
        animation: lighting 4s linear infinite;
        opacity: 0;
        padding: 0;
      }



      @keyframes rain {
        0% {
          background-position: 0% 0%;
        }
        100% {
          background-position: 5% 100%;
        }
      }



      @keyframes lighting {
        0% {
          opacity: 0;
        }
        10% {
          opacity: 0;
        }
        11% {
          opacity: 1;
        }
        14% {
          opacity: 0;
        }
        20% {
          opacity: 0;
        }
        21% {
          opacity: 1;
        }
        24% {
          opacity: 0;
        }
        104% {
          opacity: 0;
        }
      }

      button:hover {
        color: blue;
        z-index: 1000;
        position: relative;
      }

      .rain_sound {
        padding-top: 2%;
      }

      .rain-btn {
        border-radius: 2rem;
        margin-left: 5%;
        padding: 0.5rem 1rem 0.5rem 1rem;
        font-family: 'DotGothic16', sans-serif;
        border: double;
        font-weight: 600;
        background-color: #ffffff3b;
      }

      .rain-btn:hover,.rain-btn:active,.rain-btn:focus {
        background-color: #ffffff8a;
        border-color: #000000;
        color: #000000;
        font-weight: 800;
        cursor: pointer;
      }

    </style>
    
  </head>
  <body>
            <button class="rain-btn" onclick="openFullscreen();">Go  Fullscreen</button>
              <audio controls loop autoplay mute class="rain_sound" style="margin-left: 2%;">
                <source src="sounds/rain_s.mp3" type="audio/mp3">
              </audio>
    <div class="rain-container" style="background-color: #000000;" controls id="myvideo">

      <div class="rain">      
        
      </div>
    </div>


    <script type="text/javascript">

        var elem = document.getElementById("myvideo");
        function openFullscreen() {
          if (elem.requestFullscreen) {
            elem.requestFullscreen();
          } else if (elem.webkitRequestFullscreen) { /* Safari */
            elem.webkitRequestFullscreen();
          } else if (elem.msRequestFullscreen) { /* IE11 */
            elem.msRequestFullscreen();
          }
        }

    </script>

  </body>
</html>