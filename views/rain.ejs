       var button = document.querySelector(".story-btn");
        var playing = false;
        var st=document.getElementById("storyId");
button.addEventListener ("click", function (){
    if ( !playing ) { // If not playing
        
        st.classList.add("story");

        // `this` refers to `button`
        // `innerText` refers to text content in `button`
        this.innerText = 'Quit Story'; 
        playing = true;
    } else {
        
        st.classList.remove("story");
        
        this.innerText = 'Read a Story';
        playing = false;
    }
});
        


    </script>

  </body>
</html>
